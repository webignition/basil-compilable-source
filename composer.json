{
    "name": "webignition/basil-compilable-source",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-compilable-source",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCompilableSource\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCompilableSource\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php",
            "./vendor/bin/phpcs"
        ],
        "cs-fix": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php --fix"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "webignition/stubble-resolvable": ">=0.12,<1",
        "webignition/stubble": ">=0.11,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "phpstan/phpstan": "~0.12",
        "squizlabs/php_codesniffer": "~3",
        "symplify/easy-coding-standard": "^8.1",
        "webignition/object-reflector": "^0.2.0"
    }
}
